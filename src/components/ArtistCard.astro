---
import Card from "./Card.astro";
import CircleButton from "./CircleButton.astro";
const { title, description, photoId, videoUrl } = Astro.props;
---

<Card className="card">
  <img src={`https://drive.google.com/uc?id=${photoId}`} />
  <p>{title}</p>
  <p>{description}</p>
  <a target="_blank" href={videoUrl}>
    <CircleButton />
  </a>
</Card>

<style>
  .card {
    padding: 24px;
    border-radius: 12px;
    background-color: rgba(0, 0, 0, 0.5);
    max-width: 600px;

    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* title */
  p {
    font-size: 48px;
  }

  /* description */
  p + p {
    font-size: 24px;
  }
</style>
