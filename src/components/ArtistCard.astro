---
import CircleButton from "./CircleButton.astro";
const { title, description, photoId, videoUrl } = Astro.props;
---

<section>
  <img src={`https://drive.google.com/uc?id=${photoId}`} />
  <p>{title}</p>
  <p>{description}</p>
  <a target="_blank" href={videoUrl}>
    <CircleButton />
  </a>
</section>

<style>
  /* card */
  section {
    padding: 24px;
    border-radius: 12px;
    background-color: rgba(0, 0, 0, 0.5);
    max-width: calc(
      560px - (2 * 24px)
    ); /* based on video width - (2 * padding) */

    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* title */
  p {
    font-size: 48px;
  }

  /* description */
  p + p {
    font-size: 24px;
  }
</style>
